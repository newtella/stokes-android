<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codigogt.stokes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.AppointmentsActivity"
            android:parentActivityName=".ui.menu.MenuActivity"/>

        <activity android:name=".ui.CreateAppointmentActivity"
            android:parentActivityName=".ui.menu.MenuActivity" />

        <activity android:name=".ui.menu.MenuActivity" />

        <activity android:name=".ui.auth.RegisterActivity"
            android:launchMode="singleInstance" />

        <activity android:theme="@style/AppTheme2" android:name=".ui.auth.MainActivity" android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>